{
	"name": "ecomg4-ba",
	"version": "0.0.1",
	"description": "Backend API en REST para un sistema completo de E-commerce usando Nodejs y MySQL",
	"main": "app.js",
	"type": "module",
	"scripts": {
		"dev": "node --watch app.js",
		"format": "pnpm exec biome format --write .",
		"lint": "pnpm exec biome lint --write .",
		"prepare": "husky",
		"seed": "node src/database/seed.database.js",
		"db:create": "node src/database/create.database.js"
	},
	"keywords": [
		"Node",
		"Express",
		"API",
		"Backend",
		"MySQL",
		"Swagger",
		"Json Web Token",
		"Biome",
		"Jest",
		"Winston",
		"Morgan"
	],

	"author": "BAB-Labs",
	"license": "ISC",
	"packageManager": "pnpm@10.19.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/BAB-Labs/ECOMG4-BA.git"
	},
	"engines": {
		"node": ">=22.11.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.7",
		"dotenv": "17.2.3",
		"husky": "9.1.7"
	},
	"dependencies": {
		"bcrypt": "6.0.0",
		"cookie-parser": "1.4.7",
		"cors": "2.8.5",
		"express": "5.1.0",
		"helmet": "8.1.0",
		"joi": "18.0.1",
		"jsonwebtoken": "9.0.2",
		"morgan": "1.10.1",
		"mysql2": "3.15.3",
		"swagger-themes": "1.4.3",
		"swagger-ui-express": "5.0.1",
		"winston": "3.18.3",
		"yamljs": "0.3.0"
	}
}
